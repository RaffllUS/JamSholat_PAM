<?xml version="1.0" encoding="utf-8"?>
<!-- Contoh penggunaan semua ikon Material dalam LinearLayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_explore"
        android:contentDescription="Arah Kiblat" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_schedule"
        android:contentDescription="Waktu Sholat" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_my_location"
        android:contentDescription="Lokasi GPS" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_notifications"
        android:contentDescription="Notifikasi Adzan" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_settings"
        android:contentDescription="Pengaturan" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_explore"
        android:contentDescription="Masjid / Rumah Ibadah" />
</LinearLayout>
